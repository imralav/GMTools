        <VBox spacing="25.0" BorderPane.alignment="CENTER">
            <CoinConverter/>
            <Calculator/>
            <padding>
                <Insets bottom="100.0" left="100.0" right="100.0" top="100.0"/>
            </padding>
        </VBox>
    </center>
