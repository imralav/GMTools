<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<fx:root alignment="TOP_CENTER" spacing="5.0" stylesheets="@root.css" type="VBox" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
    </padding>
    <Label styleClass="section-header" text="%tab.wfrp2.characterGenerator.race" />
    <HBox fx:id="raceSelection" alignment="CENTER" minHeight="20.0" spacing="5.0">
        <Button mnemonicParsing="false" onAction="#randomizeRace" text="%randomize">
         <HBox.margin>
            <Insets left="10.0" />
         </HBox.margin></Button>
    </HBox>
    <Label styleClass="section-header" text="%tab.wfrp2.characterGenerator.name" />
    <HBox alignment="CENTER" spacing="5.0">
      <Label text="%tab.wfrp2.characterGenerator.name.generationRules" />
        <RadioButton mnemonicParsing="false" selected="true" text="%tab.wfrp2.characterGenerator.name.generationRules.simple" userData="simple">
            <toggleGroup>
                <ToggleGroup fx:id="nameGenerationType" />
            </toggleGroup>
        </RadioButton>
        <RadioButton mnemonicParsing="false" text="%tab.wfrp2.characterGenerator.name.generationRules.complex" toggleGroup="$nameGenerationType" userData="complex" />
    </HBox>
   <HBox alignment="CENTER" spacing="5.0">
     <Label text="%tab.wfrp2.characterGenerator.gender" />
     <RadioButton mnemonicParsing="false" selected="true" text="%tab.wfrp2.characterGenerator.male" userData="male">
        <toggleGroup>
           <ToggleGroup fx:id="gender" />
        </toggleGroup></RadioButton>
     <RadioButton mnemonicParsing="false" text="%tab.wfrp2.characterGenerator.female" toggleGroup="$gender" userData="female" />
   </HBox>
    <HBox alignment="CENTER" spacing="5.0">
        <TextField fx:id="name" />
        <Button mnemonicParsing="false" onAction="#randomizeName" text="%randomize" HBox.hgrow="NEVER" />
    </HBox>
</fx:root>
