<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<fx:root minWidth="450" prefHeight="375.0" prefWidth="450.0" type="javafx.scene.layout.BorderPane" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <HBox alignment="CENTER" maxHeight="50.0" minHeight="50.0" minWidth="400.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <TextField promptText="Enter category name" />
            <Button mnemonicParsing="false" text="Add category" />
         </children></HBox>
    </top>
   <center>
       <ScrollPane hbarPolicy="NEVER" BorderPane.alignment="CENTER">
           <VBox alignment="TOP_CENTER">
               <TitledPane contentDisplay="RIGHT" text="Favorites" fx:id="favoritesPane">
                   <FlowPane/>
               </TitledPane>
           </VBox>
       </ScrollPane>
   </center>
</fx:root>
